<div class='d-flex m-4'>
  <h1>
    <%= I18n.t('folder.edit.title') %>
  <h1>
</div>

<div class='d-flex m-4'>
  <%= render 'form', folder: @folder %>
</div>

<div class='d-flex ms-4'>
  <% if @folder.parent.present? %>
    <%= link_to I18n.t('folder.edit.back'), folder_path(id: @folder.parent.id), class: 'btn btn-secondary text-white' %>
  <% else %>
    <%= link_to I18n.t('folder.edit.back'), folders_path, class: 'btn btn-secondary text-white' %>
  <% end %>
</div>
