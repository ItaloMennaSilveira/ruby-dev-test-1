<div class='d-flex m-4'>
  <h1>Editando Pasta<h1>
</div>

<div class='d-flex m-4'>
  <%= render 'form', folder: @folder %>
</div>

<div class='d-flex ms-4'>
  <% if @folder.parent.present? %>
    <%= link_to 'Voltar', folder_path(id: @folder.parent.id), class: 'btn btn-secondary text-white' %>
  <% else %>
    <%= link_to 'Voltar', folders_path, class: 'btn btn-secondary text-white' %>
  <% end %>
</div>
